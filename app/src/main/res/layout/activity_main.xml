<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/id_zipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/id_getWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="#397eff"
        android:text="get weather"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/id_currentTemp"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="173dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/id_currentLogo"
        android:layout_width="258dp"
        android:layout_height="128dp"
        android:layout_below="@+id/id_getWeather"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/spideylogo" />

    <TextView
        android:id="@+id/id_quote"
        android:layout_width="323dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="224dp"
        android:gravity="center_horizontal"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/id_logo1"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:layout_toStartOf="@+id/id_zipCode"
        app:srcCompat="?attr/actionBarDivider" />

    <ImageView
        android:id="@+id/id_logo2"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/id_logo1"
        android:layout_marginStart="114dp"
        app:srcCompat="?attr/actionBarDivider" />

    <ImageView
        android:id="@+id/id_logo3"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/id_logo1"
        android:layout_marginEnd="114dp"
        app:srcCompat="?attr/actionBarDivider" />

    <ImageView
        android:id="@+id/id_logo4"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/id_logo1"
        android:layout_toEndOf="@+id/id_zipCode"
        app:srcCompat="?attr/actionBarDivider" />

    <TextView
        android:id="@+id/id_temp1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/id_zipCode"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/id_temp2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id_logo2"
        android:layout_alignTop="@+id/id_temp1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/id_temp3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id_logo3"
        android:layout_alignTop="@+id/id_temp1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/id_temp4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_temp1"
        android:layout_toEndOf="@+id/id_zipCode"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/id_time1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="137dp"
        android:layout_toStartOf="@+id/id_zipCode"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/id_time2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id_logo2"
        android:layout_alignTop="@+id/id_time1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/id_time3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id_logo3"
        android:layout_alignTop="@+id/id_time1"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/id_time4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_time1"
        android:layout_toEndOf="@+id/id_zipCode"
        android:gravity="center_horizontal" />

</RelativeLayout>